@model IEnumerable<ZeonTicaret.Model.Photo>
<script src="~/Zeon/js/jquery-1.10.0.min.js"></script>
<script>
    $(document).ready(function myfunction() {
        $(".sepeteAt").click(function myfunction() {
            var id = $(this).attr("name");
            alert(id);
        })
    })
</script>
<div class="box">
    <div class="container">
        <div class="tesla-carousel" data-tesla-plugin="carousel" data-tesla-container=".tesla-carousel-items" data-tesla-item=">div" data-tesla-autoplay="false" data-tesla-rotate="false">
            <div class="site-title">
                <ul class="wrapper-arrows">
                    <li><i class="icon-517 prev" title="left arrow"></i></li>
                    <li><i class="icon-501 next" title="right arrow"></i></li>
                </ul>
                <div class="site-inside"><span>New Products</span></div>
            </div>
            <div class="row">
                <div class="tesla-carousel-items">
                    @foreach (var item in Model)
	                 {
                        var urun = ZeonTicaret.Bll.bProduct.GetById(item.ProductId.Value);
                        <div class="col-md-3 col-xs-6">
                            <div class="product">
                                <div class="product-cover">
                                    <span class="product-action">
                                        <span class="product-new">New</span>
                                        <span class="product-sale">Sale</span>
                                    </span>
                                    <div class="product-cover-hover"><span><a href="/Home/ProductDetail/@urun.Name">Görüntüle</a></span></div>
                                    <img src="@item.Path" alt="product name" />
                                </div>
                                <div class="product-details">
                                    <h1><a href="/Home/ProductDetail/@urun.Name">@urun.Name</a></h1>
                                    <p>@Html.Raw(urun.Description)</p>
                                    <div class="product-price">
                                        <a href="#" name="@urun.Id" class="sepeteAt">
                                            <i class="icon-257" title="add to cart"></i>
                                        </a>
                                        @urun.SellPrice
                                    </div>
                                </div>
                            </div>
                        </div>
	                 }                   
                </div>
            </div>
        </div>
    </div>
</div>
