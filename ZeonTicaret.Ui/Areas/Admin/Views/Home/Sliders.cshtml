@model IEnumerable<ZeonTicaret.Model.Photo>

@{
    ViewBag.Title = "Slider Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Areas/Admin/AdminTemp/assets/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/Areas/Admin/AdminTemp/assets/sweetalert2/sweetalert2.all.min.js"></script>
<section class="wrapper">
    <!-- page start-->
    <section class="panel">
        <header class="panel-heading">
            Slider Listesi
        </header>
        <div class="panel-body">
            <div class="adv-table editable-table ">
                <div class="clearfix">
                    <div class="btn-group">
                        <a href="/Admin/Home/AddSlider" class="btn btn-success">
                            Slider Ekle <i class="icon-plus"></i>
                        </a>
                    </div>
                    <div class="btn-group pull-right">
                        <button class="btn dropdown-toggle" data-toggle="dropdown">
                            Tools <i class="icon-angle-down"></i>
                        </button>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="#">Print</a></li>
                            <li><a href="#">Save as PDF</a></li>
                            <li><a href="#">Export to Excel</a></li>
                        </ul>
                    </div>
                </div>
                <br />
                <div class="space15"></div>
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Resim
                            </th>
                            <th>
                                Sıra No
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.Path" width="100" height="100"/>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OrderNo)
                                </td>
                                <td>
                                    <a href="/Admin/Home/UpdateSlider/@item.Id"><i class="icon-pencil"></i></a>
                                    <a href="#" data-id="@item.Id" class="btnSil"><i class="icon-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <!-- page end-->
</section>
<script src="~/Areas/Admin/AdminTemp/js/jquery-1.8.3.min.js"></script>
<script>
    $(".btnSil").click(function () {
        var id = $(this).data('id');
        Swal.fire({
            title: 'Silmek istediğinizden emin misiniz?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet',
            cancelButtonText: 'Hayır'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: '/Admin/Home/DeleteSlider/' + id,
                    type: 'GET',
                    enctype: 'multipart/form-data',
                    data: { id: id },
                    processData: false,
                    contentType: false,
                    cache: false,
                    timeout: 600000,
                    success: function (result) {
                        if (result) {
                            Swal.fire(
                                'Silindi!',
                                'Kayıt başarıyla silindi.',
                                'success'
                            )
                            setTimeout(function () {
                                location.reload();
                            }, 2000);
                        }
                    }
                });
            }
        })
    });
</script>