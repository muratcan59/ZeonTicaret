@model ZeonTicaret.Model.ProductFeature

@{
    ViewBag.Title = "AddProductFeature";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var urunler = ZeonTicaret.Bll.bProduct.GetAll();
    var urun = ZeonTicaret.Bll.bProduct.GetById(Model.ProductId.Value);
    var ozelliktipler = new List<ZeonTicaret.Model.FeatureType>();
    if (urun.CategoryId != null)
    {
        ozelliktipler = ZeonTicaret.Bll.bFeatureType.GetFeatureByCategory(urun.CategoryId.Value);
    }
    var ozellikdegerler = new List<ZeonTicaret.Model.FeatureValue>();
    if (Model.FeatureTypeId != null)
    {
        ozellikdegerler = ZeonTicaret.Bll.bFeatureValue.GetFeatureValueByTypes(Model.FeatureTypeId.Value);
    }
    // javascript işlemleri eklenecek..
}

<link href="~/Areas/Admin/AdminTemp/assets/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/Areas/Admin/AdminTemp/assets/sweetalert2/sweetalert2.all.min.js"></script>
<section class="wrapper">
    <!-- page start-->
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Ürün Özellik Ekle
                </header>
                <div class="panel-body">
                    <div class="form">
                        @using (Html.BeginForm("AddProductFeature", "Product", FormMethod.Post, new { id = "UrunOzellikForm", @class = "cmxform form-horizontal tasi-form" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group ">
                                    <label class="control-label col-lg-2">Ürün Adı</label>
                                    <div class="col-lg-10">
                                        @Html.DropDownListFor(model => model.ProductId, new SelectList(urunler, "Id", "Name"), "Seçiniz", htmlAttributes: new { @class = "form-control m-bot15" })
                                    </div>
                                </div>

                                <div class="form-group ">
                                    <label class="control-label col-lg-2">Özellik Tipi</label>
                                    <div class="col-lg-10">
                                        @Html.DropDownListFor(model => model.FeatureTypeId, new SelectList(ozelliktipler, "Id", "Name"), "Seçiniz", htmlAttributes: new { @class = "form-control m-bot15" })
                                    </div>
                                </div>

                                <div class="form-group ">
                                    <label class="control-label col-lg-2">Özellik Değeri</label>
                                    <div class="col-lg-10">
                                        @Html.DropDownListFor(model => model.FeatureValueId, new SelectList(ozellikdegerler, "Id", "Name"), "Seçiniz", htmlAttributes: new { @class = "form-control m-bot15" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-10">
                                        <button class="btn btn-primary" type="submit">Ekle</button>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </section>
        </div>
    </div>
</section>

<script src="~/Areas/Admin/AdminTemp/js/jquery-1.8.3.min.js"></script>
<script>
    $('#UrunOzellikForm').on('submit', function (e) {
        e.preventDefault();
        var form = $('#UrunOzellikForm')[0];
        var data = new FormData(form);        
        $.ajax({
            url: '/Admin/Product/AddProductFeature',
            type: 'POST',
            enctype: 'multipart/form-data',
            data: data,
            processData: false,
            contentType: false,
            cache: false,
            timeout: 600000,
            success: function (result) {
                if (result.isSuccess) {
                    Swal.fire(
                        'Ürün Özellik Ekleme',
                        result.message,
                        'success'
                    )
                    setTimeout(function () {
                        window.location.href = "/Admin/Product/ProductFeatures";
                    }, 2000);
                }
                else {
                    Swal.fire(
                        'Ürün Özellik Ekleme',
                        result.message,
                        'danger'
                    )
                }
            }
        })
    });
</script>


