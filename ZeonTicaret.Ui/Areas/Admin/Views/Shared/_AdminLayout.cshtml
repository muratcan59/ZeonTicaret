            var categoryId = $("#CategoryId").val();
            $(".fType").html("");
            $.get("/Admin/Product/GetFeatureTypes?categoryId=" + categoryId, function (result) {
                $.each(result, function (key, value) {
                    $(".fType").append(new Option(value.Name, value.Id));
                });
            });
        }
    </script>
    <script>
            $(".fType").change(function () {
                setCountries();
            });

